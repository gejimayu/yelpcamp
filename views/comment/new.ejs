<% include ../partials/header %>


<h1 style="text-align: center;">Post a new comment to <%=thePost.name%></h1>
<form action="/posts/<%=thePost._id%>/comments" method="POST">
    <div style="width: 30%; margin: 0 auto;">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="text" name="comment[text]">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-lg btn-block">Submit</button>
        </div>
        <a href="/posts">Back</a>
    </div>
</form>


<% include ../partials/footer %>