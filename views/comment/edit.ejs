<% include ../partials/header %>


<h1 style="text-align: center;">Edit a comment</h1>
<form action="/posts/<%=movie_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
    <div style="width: 30%; margin: 0 auto;">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="text" name="comment[text]" value="<%=comment.text%>">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-lg btn-block">Submit</button>
        </div>
        <a href="/posts">Back</a>
    </div>
</form>


