<% include ../partials/header %>

<h1 style="text-align: center;">Submit a New Review !</h1>
<form action="/posts" method="POST">
    <div style="width: 30%; margin: 0 auto;">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="name" name="post[name]">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="image url" name="post[image]">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="caption" name="post[desc]">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-lg btn-block">Submit</button>
        </div>
        <a href="/posts">Back</a>
    </div>
</form>

