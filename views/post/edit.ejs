<% include ../partials/header %>


<h1 style="text-align: center;">Edit Review of <%=thePost.name%>!</h1>
<form action="/posts/<%=thePost._id%>?_method=PUT" method="POST">
    <div style="width: 30%; margin: 0 auto;">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="name" name="post[name]" value="<%=thePost.name%>">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="image url" name="post[image]" value="<%=thePost.image%>">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="caption" name="post[desc]" value="<%=thePost.desc%>">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-lg btn-block">Submit</button>
        </div>
        <a href="/posts">Back</a>
    </div>
</form>


<% include ../partials/footer %>