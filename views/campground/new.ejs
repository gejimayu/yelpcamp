<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center;">Create a new Campground !</h1>
    <form action="/campgrounds" method="POST">
        <div style="width: 30%; margin: 0 auto;">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="name" name="campground[name]">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="image url" name="campground[image]">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="description" name="campground[desc]">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">Submit</button>
            </div>
            <a href="/campgrounds">Back</a>
        </div>
    </form>
</div>

<% include ../partials/footer %>